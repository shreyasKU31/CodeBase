# Production Environment Variables for Server
PORT=5000
NODE_ENV=production

# Client URL (will be your deployed frontend URL)
CLIENT_URL=https://your-frontend-url.vercel.app

# Supabase Configuration (same as development)
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key

# Clerk Configuration (production keys)
CLERK_JWT_KEY=your_production_clerk_jwt_key
CLERK_ISSUER_URL=https://your-production-clerk-domain.clerk.accounts.dev/.well-known/jwks.json

# Cloudinary Configuration (same as development)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret